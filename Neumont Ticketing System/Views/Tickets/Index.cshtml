@using Neumont_Ticketing_System.Views.Tickets;
@using System.Globalization;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="ticketList">
    <div class="tableHeader">
        <div class="tableHeaderTextContainer">
            <p class="tableHeaderText">
                Owner's Name
            </p>
            <p class="tableHeaderText">
                Asset Serial
            </p>
            <p class="tableHeaderText">
                Loaner
            </p>
            <p class="tableHeaderText">
                Repair Name
            </p>
            <p class="tableHeaderText">
                Date Opened
            </p>
        </div>
    </div>
    <div class="tableBody">
        @foreach(TicketEntry ticket in Model.Tickets)
        {
        <div class="tableRow">
            <p class="tableBodyText ownerName">
                <span title="@(ticket.OwnerPreferredName)">
                    @(ticket.OwnerName)
                </span>
            </p>
            <p class="tableBodyText assetSerial">@(ticket.AssetSerial)</p>
            @if (ticket.PrimaryLoanerName != null)
            {
                <p class="tableBodyText loanerName">@(ticket.PrimaryLoanerName)</p>
            }
            else
            {
                <p class="tableBodyText loanerName">None</p>
            }
            <p class="tableBodyText repairName">@(ticket.RepairName)</p>
            <p class="tableBodyText dateOpened">
                <span title="@(ticket.DateOpened.ToString(new CultureInfo("en-us")))">
                    @(ticket.DateOpened.ToString("d"))
                </span>
            </p>
        </div>
        }
    </div>
</div>