@using Neumont_Ticketing_System.Areas.Identity.Data
@using Neumont_Ticketing_System.Views.Shared
@inject AppSignInManager SignInManager
@inject AppUserManager UserManager
@{ 
    AppUser LoggedInUser = await UserManager.FindByNameAsync(User.Identity.Name);

}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello@{(LoggedInUser != null ? $" {LoggedInUser.FullName}" : "")} !</a>

</li>

<li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
